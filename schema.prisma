generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  category    String
  description String
  imageUrl    String?
  price       Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())
}

model DemoBooking {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  courseId  Int?
  preferred String?
  createdAt DateTime @default(now())
  course    Course?  @relation(fields: [courseId], references: [id])
}
